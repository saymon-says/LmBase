<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetupActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userpic"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/anonymous"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <EditText
            android:id="@+id/user_alias"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userpic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/input"
            android:drawableStart="@drawable/username"
            android:drawablePadding="15dp"
            android:hint="Введите псевдоним"
            android:inputType="text"
            android:padding="15dp" />

        <EditText
            android:id="@+id/user_Fullname"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_alias"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:background="@drawable/input"
            android:drawableStart="@drawable/fullname"
            android:drawablePadding="15dp"
            android:hint="Введите ФИО"
            android:inputType="text"
            android:padding="15dp" />

        <LinearLayout
            android:id="@+id/workshift_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_Fullname"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/settings_workshift_count"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/input"
                android:hint="Смены в месяце"
                android:inputType="number"
                android:padding="10dp" />

            <EditText
                android:id="@+id/settings_reit"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/input"
                android:hint="ТБ"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:textAlignment="center" />

        </LinearLayout>


        <Button
            android:id="@+id/button_save_setup"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/workshift_settings"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button"
            android:fontFamily="@font/roboto_medium"
            android:padding="15dp"
            android:text="Сохранить"
            android:textSize="17sp" />
    </RelativeLayout>

</ScrollView>