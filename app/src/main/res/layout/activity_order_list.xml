<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderListActivity">

    <LinearLayout
        android:id="@+id/order_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date_workshift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data workshift"
            android:textSize="26sp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/count_pointer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CounterPoint"
            android:textSize="26sp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_of_orders"
        android:layout_below="@+id/order_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</RelativeLayout>